<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/addproduct.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs')%>

            <main>
                <form method="POST" action="/admin/add-product">
                    <label>Add Product Name </label>
                    <div class="input_container">
                        <div class='formcontroll'>
                            <label for='title'> Title</label>
                            <input type="text" name="title" placeholder="title">
                        </div>
                        <div class='formcontroll'>
                            <label for='price'> Price</label>
                            <input type="number" name="price" placeholder="price" step="0.01">
                        </div>
                        <div class='formcontroll'>
                            <label for='description'> Description</label>
                            <textarea type="text" name="description" placeholder="description" rows="5"></textarea>
                        </div>
                        <div class='formcontroll'>
                            <label for='imageurl'> Imageurl</label>
                            <input type="text" name="imageurl" placeholder="Imageurl">
                        </div>

                        <div class='formcontroll'>
                            <button class="submit_button" type="submit">Submit</button>
                        </div>
                    </div>

                </form>
            </main>
            <%- include('../includes/end.ejs') %>